!!!
%html{lang: "en"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{charset: "utf-8"}/
    %title Sangrah Library Management System
    %meta{content: "A simple library management system", name: "description"}/
    %meta{content: "Samyukti", name: "author"}/
    %meta{content: "width=device-width, initial-scale=1, maximum-scale=1", name: "viewport"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/

    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      = javascript_include_tag "ie", "data-turbolinks-track" => true
    %style#holderjs-style{type: "text/css"}
  %body{app: {controller: controller_name, action: action_name}}
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container-fluid
        .navbar-header.full-width
          %a.navbar-brand{href: application_root_path} Sangrah
          %button.navbar-toggle{data: {target: ".navbar-collapse", toggle: "collapse"}, type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %ul.nav.navbar-nav.navbar-right-top
            %li
              = link_to destroy_user_session_path, method: :delete do
                .btn.btn-danger Sign out
            %li
              = link_to edit_user_registration_path do
                .btn.btn-info
                  %i.fa.fa-user
    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          .slim-scroll
            .navbar-collapse.collapse
              = render 'layouts/navigation'
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          = render 'layouts/flash'
          = yield

    = javascript_include_tag "application"
    :javascript
      jQuery(document).ready(function () {
          Page.init();
      });
